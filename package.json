{
  "name": "ios-dev-mcp-server",
  "version": "0.5.0",
  "description": "MCP server for iOS simulator and Swift development",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "ios-dev-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "inspector": "npm run build && npx @modelcontextprotocol/inspector node build/index.js",
    "package": "./package-plugin.sh",
    "prepublish": "npm run build",
    "verify": "./verify-setup.sh",
    "install:claude-code": "./install-claude-code.sh"
  },
  "files": [
    "build",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "ios",
    "simulator",
    "xcode",
    "swift",
    "ios-development"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "execa": "^9.6.1",
    "sharp": "^0.34.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@types/node": "^25.0.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
